<!-- index.ejs -->
<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('./partials/head.ejs') %>
    </head>
    <body>
        <%- include('./partials/header.ejs')  %>
        <div class="container">
            <div class="row">
                <div class="col-12 col-md-4">
                    <h4 class="my-3">Nuevo Producto</h4>
                    <form action="productos" method="POST" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="title">Titulo</label>
                            <input type="text" class="form-control" id="title" name="title" aria-describedby="titulo del producto">
                        </div>
                        <div class="form-group">
                            <label for="price">Precio</label>
                            <input type="text" class="form-control" id="price" name="price" aria-describedby="precio del producto">
                        </div>
                        <div class="form-group">
                            <label for="thumbnail" class="">URL del Producto</label>
                            <input type="text" class="form-control" id="thumbnail" name="thumbnail" aria-describedby="foto del producto">
                        </div>
                        <div class="form-group">
                            <input type="button" class="btn btn-success btn-lg w-100" value="Guardar Producto" id="btnSaveProduct">
                            <input type="button" class="btn btn-primary btn-lg w-100" value="Auto Completar Formulario" id="btnAutoComplete">
                        </div>
                    </form>
                </div>
                <div class="col-12 col-md-8">
                    <h4 class="my-3">Listado de Productos</h4>
                    <table class="table">
                        <thead class="thead-dark">
                            <tr>
                                <th>Foto</th>
                                <th>Titulo</th>
                                <th>Precio</th>
                            </tr>
                        </thead>
                        <tbody id="productListContainer">
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <%- include('./partials/footer.ejs')  %>
        <%- include('./partials/basejs.ejs')  %>
        <script src="assets/js/index.js"></script>
    </body>
</html>